<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Pendidikan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row">
          <%- include('../partials/_nav') %>
        </div>
        <div class="container mt-5">
            <h2>List Pendidikan</h2>
            <a href="/pendidikan/create" class="btn btn-sm btn-success">Tambah</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nama Instansi</th>
                        <th>Jurusan</th>
                        <th>Tahun Masuk</th>
                        <th>Tahun Lulus</th>
                        <th>Nomor Ijazah</th>
                        <th>Nama Mahasiswa</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(item) { %>
                        <tr>
                            <td><%= item.id_pendidikan %></td>
                            <td><%= item.nama_instansi %></td>
                            <td><%= item.jurusan %></td>
                            <td><%= item.tahun_masuk %></td>
                            <td><%= item.tahun_lulus %></td>
                            <td><%= item.nomor_ijazah %></td>
                            <td><%= item.nama_depan %> <%= item.nama_belakang %></td>
                            <td>
                                <a href="/pendidikan/edit/<%= item.id_pendidikan %>" class="btn btn-warning">Edit</a>
                                <a href="/pendidikan/delete/<%= item.id_pendidikan %>" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    </div>
</body>

</html>
